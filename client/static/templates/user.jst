<h1><%= user.first_name %> <%= user.last_name %></h1>
<p><a href="mailto:<%= user.email %>"><%= user.email %></a></p>

<% if (user.email == current_user.email) { %>
<p><a id="user-edit" href="#" class="btn" onclick="return false;">Edit my profile</a> <a id="user-change-password" href="#" class="btn" onclick="return false;">Change password</a></p>
<% } %>

<h3><% if (user.email == current_user.email) { %>My datasets<% } else { %>Datasets created by this user<% } %></h3> 
<ul>
    <% _.each(datasets.datasets, function(dataset) { %>
    <li><a href="#dataset/<%= dataset.slug %>"><strong><%= unescape(dataset.name) %></strong></a></li>
    <% }); %>
</ul>

<% if (user.email == current_user.email) { %>
<h3>My search notifications</h3> 
<ul id="subscriptions">
    <% _.each(user.subscriptions, function(sub) { %>
        <% if (sub.dataset) { %>
        <li><a href="#dataset/<%= sub.dataset.slug %>/search/<%= sub.query %>"><code><%= sub.query %></code> in <strong><%= unescape(sub.dataset.name) %></strong></a> <a data-original-title="Cancel notifications for this search" rel="tooltip" href="#" onclick="return false;" class="delete" data-uri="<%= sub.resource_uri %>"><i class="icon-remove"></i></a></li>
        <% } else { %>
        <li><a href="#search/<%= sub.query %>"><code><%= sub.query %></code></a> <a data-original-title="Cancel notifications for this search" rel="tooltip" href="#" onclick="return false;" class="delete" data-uri="<%= sub.resource_uri %>"><i class="icon-remove"></i></a></li>
        <% } %>
    <% }); %>
</ul>
<% } %>

<div id="modal-edit-user" class="modal hide fade">
</div>

<div id="modal-user-change-password" class="modal hide fade">
</div>
