<div class="row-fluid">
    <div class="span12">
        <form id="datasets-search-form" class="well">
            <fieldset>
                <h3>Find a dataset</h3>
                <select id="datasets-search-category" name="category" class="input-medium">
                    <option value="">All</option>
                    <% categories.each(function(cat) { %>
                    <option value="<%= cat.get("slug") %>" <% if (cat.get("slug") == category) { print('selected="selected"') } %>><%= cat.get("name") %></option>
                    <% }); %>
                </select>
                <input id="datasets-search-query" type="text" name="query" class="input-xxlarge" value="<%= query %>" placeholder="Enter a search query" />
                <input type="submit" id="datasets-search-submit" class="btn primary" value="Search" />
                &nbsp;<%= PANDA.templates.inline_advanced_search_tooltip() %>
            </fieldset>
        </form>
    </div>
</div>

<div id="datasets-search-results">
</div>

