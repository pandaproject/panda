<div class="pager">
    <% if (previous || next) { %>
    <p id="search-pager">
        <% if (previous) { %>
            <a href="<%= root_url %>/<%= limit %>/<%= page %>" class="prev scroll-up">&laquo;</a> 
        <% } else { %>
            <span>&laquo;</span> 
        <% } %>

        <%= page + 1 %>

        <% if (next) { %>
            <a href="<%= root_url %>/<%= limit %>/<%= page + 2 %>" class="next scroll-up">&raquo;</a>
        <% } else { %>
            <span>&raquo;</span>
        <% } %>
    </p>
    <% } %>
</div>
